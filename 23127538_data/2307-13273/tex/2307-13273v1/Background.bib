eprint = {1205.1919},
file = {:Users/nishiwakikouyuu/Documents/papers/1205.1919.pdf:pdf},
issn = {09354956},
journal = {Astronomy and Astrophysics Review},
keywords = {Cooling flows,Galaxy clusters,Galaxy groups clusters and superclusters,Halos,Intracluster matter,Large scale structure of the universe,Large-scale magnetic fields,Mini-halos,Radio sources,Relics},
number = {1},
title = {{Clusters of galaxies: Observational properties of the diffuse radio emission}},
