issn = {13652966},
journal = {Monthly Notices of the Royal Astronomical Society},
keywords = {Acceleration of particles,Galaxies: clusters: general,Radiation mechanisms: non-thermal,Turbulence},
number = {2},
pages = {1506--1525},
title = {{Relativistic protons in the Coma galaxy cluster: First gamma-ray constraints ever on turbulent reacceleration}},
volume = {472},
