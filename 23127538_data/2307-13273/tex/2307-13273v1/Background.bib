issn = {15502368},
journal = {Physical Review D - Particles, Fields, Gravitation and Cosmology},
number = {2},
pages = {1--17},
title = {{Diffuse neutrino intensity from the inner jets of active galactic nuclei: Impacts of external photon fields and the blazar sequence}},
