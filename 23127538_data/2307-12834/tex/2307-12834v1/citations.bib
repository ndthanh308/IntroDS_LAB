@Article{Zhang2018_net,
AUTHOR = {Zhang, Zhiyu and Hou, Guanyi and Shen, Jianxiang and Liu, Jun and Gao, Yangyang and Zhao, Xiuying and Zhang, Liqun},
TITLE = {Designing the Slide-Ring Polymer Network with both Good Mechanical and Damping Properties via Molecular Dynamics Simulation},
