url = {https://www.sciencedirect.com/science/article/pii/S0006349514047626},
author = {Teresa Ruiz-Herrero and Michael F. Hagan},
abstract = {For many viruses, assembly and budding occur simultaneously during virion formation. Understanding the mechanisms underlying this process could promote biomedical efforts to block viral propagation and enable use of capsids in nanomaterials applications. To this end, we have performed molecular dynamics simulations on a coarse-grained model that describes virus assembly on a fluctuating lipid membrane. Our simulations show that the membrane can promote association of adsorbed subunits through dimensional reduction, but it also introduces thermodynamic and kinetic effects that can inhibit complete assembly. We find several mechanisms by which membrane microdomains, such as lipid rafts, reduce these effects, and thus, enhance assembly. We show how these predicted mechanisms can be experimentally tested. Furthermore, the simulations demonstrate that assembly and budding depend crucially on the system dynamics via multiple timescales related to membrane deformation, protein diffusion, association, and adsorption onto the membrane.}
}

@article{Zlotnick2013,
title = {To Build a Virus on a Nucleic Acid Substrate},
journal = {Biophys. J.},
volume = {104},
number = {7},
pages = {1595-1604},
year = {2013},
issn = {0006-3495},
doi = {https://doi.org/10.1016/j.bpj.2013.02.005},
url = {https://www.sciencedirect.com/science/article/pii/S0006349513001902},
author = {Adam Zlotnick and J. Zachary Porterfield and Joseph Che-Yen Wang},
abstract = {Many viruses package their genomes concomitant with assembly. Here, we show that this reaction can be described by three coefficients: association of capsid protein (CP) to nucleic acid (NA), KNA; CP-CP interaction, ω; and α, proportional to the work required to package NA. The value of α can vary as NA is packaged. A phase diagram of average lnα versus lnω identifies conditions where assembly is likely to fail or succeed. NA morphology can favor (lnα > 0) or impede (lnα < 0) assembly. As lnω becomes larger, capsids become more stable and assembly becomes more cooperative. Where (lnα + lnω) < 0, the CP is unable to contain the NA, so that assembly results in aberrant particles. This phase diagram is consistent with quantitative studies of cowpea chlorotic mottle virus, hepatitis B virus, and simian virus 40 assembling on ssRNA and dsDNA substrates. Thus, the formalism we develop is suitable for describing and predicting behavior of experimental studies of CP assembly on NA.}
}

@article{Cameron2013,
