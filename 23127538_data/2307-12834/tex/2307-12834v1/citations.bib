@article {Cadena-Nava2012,
	author = {Cadena-Nava, Ruben D. and Comas-Garcia, Mauricio and Garmann, Rees F. and Rao, A. L. N. and Knobler, Charles M. and Gelbart, William M.},
	title = {Self-Assembly of Viral Capsid Protein and RNA Molecules of Different Sizes: Requirement for a Specific High Protein/RNA Mass Ratio},
