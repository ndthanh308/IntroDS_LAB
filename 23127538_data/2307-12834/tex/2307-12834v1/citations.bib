@Article{Campos2019,
author ="Campos-Villalobos, Gerardo and Siperstein, Flor R. and Patti, Alessandro",
title  ="Transferable Coarse-grained MARTINI Model for Methacrylate-based Copolymers",
journal  ="Mol. Syst. Des. Eng.",
year  ="2019",
