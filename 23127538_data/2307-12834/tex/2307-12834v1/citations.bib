@article{Uddin2018,
author = {Uddin, Ismail and Frank, Stefanie and Warren, Martin J. and Pickersgill, Richard W.},
title = {A Generic Self-Assembly Process in Microcompartments and Synthetic Protein Nanotubes},
journal = {Small},
volume = {14},
number = {19},
pages = {1704020},
keywords = {bacterial microcompartment shell proteins, protein nanotubes, self-assembly, transmission electron microscopy},
