@article{Crowley2010,
title = {Structural Insight into the Mechanisms of Transport across the Salmonella enterica Pdu Microcompartment Shell},
journal = {Journal of Biological Chemistry},
volume = {285},
number = {48},
pages = {37838-37846},
year = {2010},
issn = {0021-9258},
