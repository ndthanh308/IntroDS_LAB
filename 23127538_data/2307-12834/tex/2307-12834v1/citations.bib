@article{Zhang2021,
author = {Zhang, Wenjing and Jia, Qingyan and Teng, Yibo and Yang, Mengsi and Zhang, Hui and Zhang, Xian-En and Wang, Pengfei and Ge, Jiechao and Cao, Sheng and Li, Feng},
title = {An Ultrastable Virus-Like Particle with a Carbon Dot Core and Expanded Sequence Plasticity},
journal = {Small},
