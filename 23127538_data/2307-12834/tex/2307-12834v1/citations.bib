@article{Balzer2022,
author ="Balzer, Christopher and Zhang, Pengfei and Wang, Zhen-Gang",
title  ="Wetting behavior of polyelectrolyte complex coacervates on solid surfaces",
journal  ="Soft Matter",
year  ="2022",
volume  ="18",
