\usepackage[normalem]{ulem}	
\usepackage{sphack}	
\usepackage{color}
\definecolor{orange}{rgb}{1,0.5,0}
\definecolor{forestgreen}{rgb}{0.13, 0.55, 0.13}
\newcommand{\hil}[1]{\ifdefined\highlighton{\color{blue}#1}\else{#1}\fi}
\newcommand{\add}[1]{\ifdefined\editon{\color{forestgreen}#1}\else{#1}\fi}
\newcommand{\del}[1]{\ifdefined\editon{\color{red}\sout{#1}}\else\@bsphack\@esphack\fi}
\newcommand{\rem}[1]{\ifdefined\editon{\color{red}\sout{#1}}\else\@bsphack\@esphack\fi}
\newcommand{\madd}[1]{\ifdefined\mediton{\color{teal}#1}\else{#1}\fi}
\newcommand{\mdel}[1]{\ifdefined\mediton{\color{orange}\sout{#1}}\else\@bsphack\@esphack\fi}
\newcommand{\mmadd}[1]{\ifdefined\mmediton{\color{teal}#1}\else{#1}\fi}
\newcommand{\mmdel}[1]{\ifdefined\mmediton{\color{magenta}\sout{#1}}\else\@bsphack\@esphack\fi}
\newcommand{\com}[1]{\ifdefined\commenton{\begin{center}\color{forestgreen}\fbox{\parbox{3.0in}{\color{magenta}Comment:\\#1}}\end{center}}\else\@bsphack \@esphack\fi}
\newcommand{\mcom}[1]{\ifdefined\mcommenton{\begin{center}\color{teal}\fbox{\parbox{3.0in}{\color{magenta}Comment:\\#1}}\end{center}}\else\@bsphack \@esphack\fi}
\newcommand{\mmcom}[1]{\ifdefined\mmcommenton{\begin{center}\color{teal}\fbox{\parbox{3.0in}{\color{magenta}Comment:\\#1}}\end{center}}\else\@bsphack \@esphack\fi}
\newcommand{\eqdel}[1]{\ifdefined\editon{\color{red}#1}\else\@bsphack\@esphack\fi}
\newcommand{\meqdel}[1]{\ifdefined\mediton{\color{orange}#1}\else\@bsphack\@esphack\fi}
\newcommand{\mmeqdel}[1]{\ifdefined\mmediton{\color{magenta}#1}\else\@bsphack\@esphack\fi}

