@article{wensing_proprioceptive_2017,
	title = {Proprioceptive {Actuator} {Design} in the {MIT} {Cheetah}: {Impact} {Mitigation} and {High}-{Bandwidth} {Physical} {Interaction} for {Dynamic} {Legged} {Robots}},
