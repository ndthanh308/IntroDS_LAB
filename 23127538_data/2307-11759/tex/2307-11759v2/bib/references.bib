	language = {en},
	number = {2},
	urldate = {2020-01-04},
	journal = {IEEE Transactions on Robotics},
	author = {Park, Hae-Won and Ramezani, Alireza and Grizzle, J. W.},
	month = apr,
	year = {2013},
	pages = {331--345},
}

