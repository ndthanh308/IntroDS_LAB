	booktitle = {2022 {IEEE} 61st {Conference} on {Decision} and {Control} ({CDC})},
	author = {Sihite, Eric and Mottis, Benjamin and Ghanem, Paul and Ramezani, Alireza and Gharib, Morteza},
	month = dec,
	year = {2022},
	note = {ISSN: 2576-2370},
	keywords = {Decision making, Heuristic algorithms, Legged locomotion, Roads, Solid modeling, Three-dimensional displays, Transforms},
	pages = {764--770},
}

