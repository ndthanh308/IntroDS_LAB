	booktitle = {2012 {IEEE} {International} {Conference} on {Robotics} and {Automation}},
	publisher = {IEEE},
	author = {Park, Hae-Won and Sreenath, Koushil and Ramezani, Alireza and Grizzle, J.W.},
	month = may,
	year = {2012},
	pages = {45--50},
}

@article{park_finite-state_2013-1,
