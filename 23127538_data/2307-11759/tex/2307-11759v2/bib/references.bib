@article{chukewad_robofly_2021,
	title = {{RoboFly}: {An} {Insect}-{Sized} {Robot} {With} {Simplified} {Fabrication} {That} {Is} {Capable} of {Flight}, {Ground}, and {Water} {Surface} {Locomotion}},
