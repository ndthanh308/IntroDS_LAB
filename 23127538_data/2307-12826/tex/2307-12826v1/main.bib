@article{Mesinger2016,
    author = {Mesinger, Andrei and Greig, Bradley and Sobacchi, Emanuele},
    title = "{The Evolution Of 21 cm Structure (EOS): public, large-scale simulations of Cosmic Dawn and reionization}",
