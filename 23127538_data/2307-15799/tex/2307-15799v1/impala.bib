journal = {Opt. Lett.},
keywords = {Fibers, single-mode; Phase retrieval; Endoscopic imaging; Digital holography ; Far field diffraction; Fiber bundles; Multicore fibers; Phase compensation; Phase retrieval; Phase shift},
