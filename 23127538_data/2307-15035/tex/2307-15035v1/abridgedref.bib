@article{
doi:10.1073/pnas.1019079108,
author = {Knut Drescher  and Jörn Dunkel  and Luis H. Cisneros  and Sujoy Ganguly  and Raymond E. Goldstein },
title = {Fluid dynamics and noise in bacterial cell–cell and cell–surface scattering},
