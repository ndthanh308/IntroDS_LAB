@article{
doi:10.1073/pnas.1202032109,
author = {Henricus H. Wensink  and Jörn Dunkel  and Sebastian Heidenreich  and Knut Drescher  and Raymond E. Goldstein  and Hartmut Löwen  and Julia M. Yeomans },
title = {Meso-scale turbulence in living fluids},
journal = {Proceedings of the National Academy of Sciences},
volume = {109},
number = {36},
