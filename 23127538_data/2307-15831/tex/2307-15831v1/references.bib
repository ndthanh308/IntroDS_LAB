doi = {10.1088/0004-637X/755/1/40},
file = {:Users/dooseok/Library/Application Support/Mendeley Desktop/Downloaded/Pellegrini et al. - 2012 - The optical depth of hii regions in the magellanic clouds.pdf:pdf},
