author = {Silva-Villa, E. and Larsen, S. S.},
doi = {10.1051/0004-6361/201016206},
file = {:Users/dooseok/Library/Application Support/Mendeley Desktop/Downloaded/Silva-Villa, Larsen - 2011 - The star cluster - Field star connection in nearby spiral galaxies II. Field star and cluster formation his.pdf:pdf},
issn = {00046361},
journal = {Astron. Astrophys.},
keywords = {galaxies: individual: NGC 1313,galaxies: individual: NGC 45,galaxies: individual: NGC 5236,galaxies: individual: NGC 7793,galaxies: photometry,galaxies: star formation},
title = {{The star cluster - Field star connection in nearby spiral galaxies: II. Field star and cluster formation histories and their relation}},
volume = {529},
year = {2011}
}
