issn = {15384357},
journal = {Astrophys. J.},
keywords = {Galaxies: dwarf,Galaxies: individual (SBS 0335-052E),Galaxies: star clusters: General,Galaxies: starburst},
number = {2},
pages = {1620--1628},
title = {{On the origin of the red excess in very young super star clusters: The case of SBS 0335-052E}},
