@article{Renhorn:15,
author = {Ingmar G. E. Renhorn and Tomas Hallberg and Glenn D. Boreman},
journal = {Opt. Express},
keywords = {Scattering, rough surfaces; BSDF, BRDF, and BTDF ; Scattering, polarization ; Atmospheric scattering; Hyperspectral imaging; Multiple scattering; Ray tracing; Rough surface scattering; Surface plasmon polaritons},
number = {24},
