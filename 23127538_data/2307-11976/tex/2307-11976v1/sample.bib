@article{Kupinski:18,
author = {Meredith Kupinski and Matthieu Boffety and Fran\c{c}ois Goudail and Razvigor Ossikovski and Angelo Pierangelo and Jean Rehbinder and J\'{e}r\'{e}my Vizet and Tatiana Novikova},
