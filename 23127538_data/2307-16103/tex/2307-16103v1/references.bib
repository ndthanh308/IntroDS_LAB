Publisher: Nature Publishing Group},
	keywords = {Statistical physics, Thermodynamics},
	pages = {64--68},
	file = {Full Text PDF:/Users/vucma/Zotero/storage/V4D88Q49/Kumar and Bechhoefer - 2020 - Exponentially faster cooling in a colloidal system.pdf:application/pdf},
}

@article{lu_nonequilibrium_2017,
