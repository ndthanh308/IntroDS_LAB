	urldate = {2023-03-16},
	journal = {Proceedings of the National Academy of Sciences},
	author = {Lu, Zhiyue and Raz, Oren},
	month = may,
	year = {2017},
	pages = {5083--5088},
	file = {Full Text:/Users/vucma/Zotero/storage/5A9CKH2L/Lu and Raz - 2017 - Nonequilibrium thermodynamics of the Markovian Mpe.pdf:application/pdf;pnas.1701264114.sapp (1).pdf:/Users/vucma/Zotero/storage/GB2S72FK/pnas.1701264114.sapp (1).pdf:application/pdf},
