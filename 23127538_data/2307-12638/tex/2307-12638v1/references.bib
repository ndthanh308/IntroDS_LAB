@article{Lee,
  author={Lee, Sylvanus Y and Amsden, Jason J and Boriskina, Svetlana V and Gopinath, Ashwin and Mitropolous, Alexander and Kaplan, David L and Omenetto, Fiorenzo G and Dal Negro, Luca},
title = {Spatial and spectral detection of protein monolayers with deterministic aperiodic arrays of metal nanoparticles},
journal = {Proceedings of the National Academy of Sciences},
volume = {107},
number = {27},
