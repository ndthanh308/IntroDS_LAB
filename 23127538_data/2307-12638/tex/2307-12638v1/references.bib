journal = {Opt. Express},
keywords = {Optical engineering; Nanophotonics and photonic crystals ; Optical vortices ; Diffractive optical elements; Far field diffraction; Light beams; Light scattering; Second harmonic generation; Singular optics},
number = {16},
pages = {18209--18223},
