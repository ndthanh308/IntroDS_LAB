	author = {Varró, Sándor},
	month = jul,
	year = {2021},
	keywords = {quantum optics, attosecond pulses, generation of high harmonics, nonclassical photon states, nonrelativistic quantum electrodynamics, strong laser field–matter interactions},
	pages = {269},
}

