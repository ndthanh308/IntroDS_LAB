@article{jiang_role_2018,
	title = {Role of the {Transition} {Dipole} {Amplitude} and {Phase} on the {Generation} of {Odd} and {Even} {High}-{Order} {Harmonics} in {Crystals}},
	volume = {120},
	url = {https://link.aps.org/doi/10.1103/PhysRevLett.120.253201},
