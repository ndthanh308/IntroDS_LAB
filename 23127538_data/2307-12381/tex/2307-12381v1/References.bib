@article{luu_high-order_2016,
	title = {High-order harmonic generation in solids: {A} unifying approach},
	volume = {94},
	shorttitle = {High-order harmonic generation in solids},
	url = {https://link.aps.org/doi/10.1103/PhysRevB.94.115164},
