@Article{buildings12020120,
AUTHOR = {Shahzad, Muhammad and Shafiq, Muhammad Tariq and Douglas, Dean and Kassem, Mohamad},
TITLE = {Digital Twins in Built Environments: An Investigation of the Characteristics, Applications, and Challenges},
