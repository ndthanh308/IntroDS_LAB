AUTHOR = {Pritoni, Marco and Paine, Drew and Fierro, Gabriel and Mosiman, Cory and Poplawski, Michael and Saha, Avijit and Bender, Joel and Granderson, Jessica},
TITLE = {Metadata Schemas and Ontologies for Building Energy Applications: A Critical Review and Use Case Analysis},
