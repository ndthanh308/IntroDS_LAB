pages = {L13----L16},
publisher = {{\{}IOP{\}} Publishing},
title = {{The Kinematic Status and Mass Content of the Sculptor Dwarf Spheroidal Galaxy}},
url = {https://doi.org/10.1086{\%}2F590179},
volume = {681},
year = {2008}
