file = {:Users/albertommartinez/Documents/PhD/phd/Articulos/van{\_}der{\_}Marel{\_}2001{\_}AJ{\_}122{\_}1807.pdf:pdf},
issn = {00046256},
journal = {\aj},
keywords = {agb and post-agb,color-magnitude diagrams {\`{e}} galaxies,fundamental parameters {\`{e}} galaxies,magellanic clouds {\`{e}} stars,structure {\`{e}}},
