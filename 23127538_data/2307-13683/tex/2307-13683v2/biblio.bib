title = {{THE ACS LCID PROJECT. IX. IMPRINTS OF THE EARLY UNIVERSE IN THE RADIAL VARIATION OF THE STAR FORMATION HISTORY OF DWARF GALAXIES}},
url = {https://doi.org/10.1088{\%}2F0004-637x{\%}2F778{\%}2F2{\%}2F103},
