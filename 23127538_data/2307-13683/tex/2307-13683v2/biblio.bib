author = {Koch, Andreas and Grebel, Eva K. and Gilmore, Gerard F. and Wyse, Rosemary F.G. and Kleyna, Jan T. and Harbeck, Daniel R. and Wilkinson, Mark I. and Evans, N. Wyn},
doi = {10.1088/0004-6256/135/4/1580},
