title = {{Space Motions of the Dwarf Spheroidal Galaxies Draco and Sculptor Based on HST Proper Motions with a {\~{}}10 yr Time Baseline}},
url = {https://doi.org/10.3847{\%}2F1538-4357{\%}2Faa917b},
