journal = {ACS Photonics},
keywords = {PINEM,cathodoluminescence,electron beam photonics,electron energy-loss spectroscopy (EELS),light-matter interactions,ultrafast electron microscopy},
mendeley-groups = {EEGS},
number = {4},
pages = {945--974},
