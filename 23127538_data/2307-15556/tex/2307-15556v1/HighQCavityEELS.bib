journal = {ACS Photonics},
keywords = {cathodoluminescence,damping effect,electron energy loss spectroscopy,higher order mode,localized surface plasmons},
number = {9},
pages = {1654--1661},
title = {{Extinction and Scattering Properties of High-Order Surface Plasmon Modes in Silver Nanoparticles Probed by Combined Spatially Resolved Electron Energy Loss Spectroscopy and Cathodoluminescence}},
