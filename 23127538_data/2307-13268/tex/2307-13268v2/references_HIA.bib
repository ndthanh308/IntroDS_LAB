}
@article{groselj2017,
	title = {Fully {{Kinetic}} versus {{Reduced-kinetic Modeling}} of {{Collisionless Plasma Turbulence}}},
	author = {Gro{\v s}elj, Daniel and Cerri, Silvio S. and Navarro, Alejandro Ba{\~n}{\'o}n and Willmott, Christopher and Told, Daniel and Loureiro, Nuno F. and Califano, Francesco and Jenko, Frank},
