%
% Tikz settings and styles, mostly used for trees in chapters 8 and 9
%
\NewDocumentCommand\ltlset{m}{\ensuremath{\set{\ltl{#1}}}}

\tikzset{
  % Implicit math mode in nodes http://tex.stackexchange.com/questions/5494
  math mode/.style={execute at begin node=\(,execute at end node=\)},
  % Styles used in the tableau
  tableau edge/.style={-, thin, solid},
  tableau node/.style={preprocess node content=\ltlset},
  step rule/.style={->,thick},
  state/.style={fill, circle, inner sep=2pt},
  % Trees defaults
  sibling distance=4cm,
  level distance=1cm
}

