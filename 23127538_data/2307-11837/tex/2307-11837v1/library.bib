   doi = {10.1086/300974},
   issn = {00046256},
   issue = {2},
   journal = {\aj},
   keywords = {abell 2125,abell 2645,active è galaxies,clusters,distances and redshifts è,evolution è,galaxies,individual,kinematics and dynamics è,photometry è galaxies,starburst,è},
   pages = {633-644},
   title = {Cluster Mergers as Triggers of Star Formation and Radio Emission: A Comparative Study of the Rich Clusters Abell 2125 and 2645},
   volume = {118},
   year = {1999},
