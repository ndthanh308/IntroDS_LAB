   keywords = {Galaxies: clusters: general,Galaxies: evolution,Galaxies: interactions,Galaxies: statistics},
   month = {3},
   pages = {L149},
   title = {The evolution of the density of galaxy clusters and groups: denser environments at higher redshifts},
   volume = {162},
   url = {https://academic.oup.com/mnras/article-lookup/doi/10.1111/j.1365-2966.2010.16546.x http://adsabs.harvard.edu/doi/10.1086/180643},
