   keywords = {Galaxies: fundamental parameters,Methods: data analysis,Stars: fundamental parameters,Stars: statistics,Techniques: photometric},
   pages = {110-129},
   title = {Stellar locus regression: Accurate color calibration and the real-time determination of galaxy cluster photometric redshifts},
   volume = {138},
   year = {2009},
}
