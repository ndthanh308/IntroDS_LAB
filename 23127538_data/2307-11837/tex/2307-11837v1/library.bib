   issue = {2},
   journal = {\mnras},
   keywords = {Dark matter,Galaxies: clusters: Individual: coma,Galaxies: kinematics and dynamics,Methods: analytical},
   month = {8},
   pages = {401-412},
   title = {Dark matter distribution in the Coma cluster from galaxy kinematics: breaking the mass–anisotropy degeneracy},
   volume = {343},
   url = {https://academic.oup.com/mnras/article-lookup/doi/10.1046/j.1365-8711.2003.06684.x},
   year = {2003},
}
@article{Vulcani2011,
