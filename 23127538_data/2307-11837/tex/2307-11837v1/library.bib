   keywords = {Galaxies: clusters: general,Galaxies: clusters: intracluster medium,Galaxies: evolution,Hydrodynamics,Methods: numerical,X-rays: galaxies: clusters},
   pages = {213-233},
   title = {The redshift evolution of massive galaxy clusters in the MACSIS simulations},
   volume = {465},
   year = {2017},
}
