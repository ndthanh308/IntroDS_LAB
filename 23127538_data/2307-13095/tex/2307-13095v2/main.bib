    url = {https://doi.org/10.1046/j.1365-8711.1999.02907.x},
    eprint = {https://academic.oup.com/mnras/article-pdf/309/4/1017/3785912/309-4-1017.pdf},
}

@article{10.1093/mnras/stv2712,
    author = {Godfrey, L. E. H. and Shabala, S. S.},
