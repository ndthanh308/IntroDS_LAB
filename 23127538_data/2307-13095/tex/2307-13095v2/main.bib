@article{10.1046/j.1365-8711.1999.02907.x,
    author = {Willott, Chris J. and Rawlings, Steve and Blundell, Katherine M. and Lacy, Mark},
    title = "{The emission line—radio correlation for radio sources using the 7C Redshift Survey}",
