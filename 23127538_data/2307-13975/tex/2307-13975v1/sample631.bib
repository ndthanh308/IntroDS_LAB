@Article{Rosa2018,
  author        = {Rosa, R.~R. and de Carvalho, R.~R. and Sautter, R.~A. and Barchi, P.~H. and Stalder, D.~H. and Moura, T.~C. and Rembold, S.~B. and Morell, D.~R.~F. and Ferreira, N.~C.},
