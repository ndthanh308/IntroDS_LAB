\acmConference{}{}{} % just to avoid errors; overriding headers/footers below anyway
\startPage{0} % for the title page
\settopmatter{printacmref=false, printccs=false, printfolios=false}
\AtBeginDocument{
\fancypagestyle{firstpagestyle}{% override header/footer style used by maketitle of acmart
	\renewcommand{\headrulewidth}{0pt}%
	\fancyhf{}%
	%\fancyfoot[L]{\footnotesize{\emph{Manuscript submitted for review to the 23nd ACM Conference on Economics \& Computation (EC\textquotesingle 22).}}}%
}
\fancypagestyle{acmec}{% header/footer style for pages other than the title page
	\renewcommand{\headrulewidth}{0pt}%
	\fancyhf{}%
	\fancyhead[C]{\footnotesize{\mbox{\shortauthors}}}
	\fancyhead[R]{\thepage}%
}
\pagestyle{acmec}
\renewcommand{\footnotetextcopyrightpermission}[1]{} % remove copyright block
\renewcommand{\footnotetextauthorsaddresses}[1]{} % remove author address block
}