@article{madjet_intermolecular_2006,
	title = {Intermolecular Coulomb Couplings from Ab Initio Electrostatic Potentials:  Application to Optical Transitions of Strongly Coupled Pigments in Photosynthetic Antennae and Reaction Centers},
