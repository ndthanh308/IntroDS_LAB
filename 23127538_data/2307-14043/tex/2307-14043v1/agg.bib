	urldate = {2021-07-21},
	date = {2017-08-30},
	langid = {english},
	note = {Publisher: The Royal Society of Chemistry},
	file = {Snapshot:C\:\\Users\\cuaml\\Zotero\\storage\\ES99IMD2\\C7CP03535G.html:text/html;Submitted Version:C\:\\Users\\cuaml\\Zotero\\storage\\6YS5LFZD\\Fox et al. - 2017 - The carotenoid pathway what is important for exci.pdf:application/pdf;Supplementary Information PDF:C\:\\Users\\cuaml\\Zotero\\storage\\TDEV3FVM\\Fox et al. - 2017 - The carotenoid pathway what is important for exci.pdf:application/pdf},
