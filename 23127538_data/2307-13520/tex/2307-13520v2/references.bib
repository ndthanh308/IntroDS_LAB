@article{dawkins-stephenson-2018,
  title = {Quantification of Extremal Dependence in Spatial Natural Hazard Footprints: Independence of Windstorm Gust Speeds and Its Impact on Aggregate Losses},
  shorttitle = {Quantification of Extremal Dependence in Spatial Natural Hazard Footprints},
  author = {Dawkins, Laura C. and Stephenson, David B.},
  year = {2018},
