@article{kapica-jurasz-ea-2024,
  title = {The Potential Impact of Climate Change on {{European}} Renewable Energy Droughts},
  author = {Kapica, Jacek and Jurasz, Jakub and Canales, Fausto A. and Bloomfield, Hannah and Guezgouz, Mohammed and De Felice, Matteo and Zbigniew, Kobus},
  year = {2024},
