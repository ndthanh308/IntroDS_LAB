@article{hu-scholz-ea-2023,
  title = {Downscaling {{ERA5}} Wind Speed Data: A Machine Learning Approach Considering Topographic Influences},
  shorttitle = {Downscaling {{ERA5}} Wind Speed Data},
  author = {Hu, Wenxuan and Scholz, Yvonne and Yeligeti, Madhura and von Bremen, Lueder and Deng, Ying},
