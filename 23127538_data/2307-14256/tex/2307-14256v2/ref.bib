  doi           = {10.1016/j.physletb.2016.07.044},
  eprint        = {1607.08043},
  keywords      = {Gamma ray burst, High energy photon, Light speed, Lorentz invariance violation},
  url           = {https://linkinghub.elsevier.com/retrieve/pii/S0370269316303859},
}

