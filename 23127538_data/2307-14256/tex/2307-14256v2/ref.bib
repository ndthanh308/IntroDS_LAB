@Article{Gilmore2012,
  author   = {Gilmore, Rudy C. and Somerville, Rachel S. and Primack, Joel R. and Dom{\'{i}}nguez, Alberto},
  journal  = {Monthly Notices of the Royal Astronomical Society},
  title    = {{Semi-analytic modelling of the extragalactic background light and consequences for extragalactic gamma-ray spectra}},
  year     = {2012},
