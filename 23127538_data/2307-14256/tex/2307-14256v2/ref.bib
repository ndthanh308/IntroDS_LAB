@Article{Ellis2006,
  author        = {Ellis, John and Mavromatos, N. E. and Nanopoulos, D. V. and Sakharov, A. S. and Sarkisyan, E. K. G.},
  journal       = {Astroparticle Physics},
  title         = {{Robust limits on Lorentz violation from gamma-ray bursts}},
  year          = {2006},
  issn          = {09276505},
  month         = {jul},
  number        = {6},
  pages         = {402--411},
  volume        = {25},
  abstract      = {We constrain the possibility of a non-trivial refractive index in free space corresponding to an energy-dependent velocity of light: c(E) ≃ c0(1 - E/M), where M is a mass scale that might represent effect of quantum-gravitational space-time foam, using the arrival times of sharp features observed in the intensities of radiation with different energies from a large sample of gamma-ray bursters (GRBs) with known redshifts. We use wavelet techniques to identify genuine features, which we confirm in simulations with artificial added noise. Using the weighted averages of the time-lags calculated using correlated features in all the GRB light curves, we find a systematic tendency for more energetic photons to arrive earlier. However, there is a very strong correlation between the parameters characterizing an intrinsic time-lag at the source and a distance-dependent propagation effect. Moreover, the significance of the earlier arrival times is less evident for a subsample of more robust spectral structures. Allowing for intrinsic stochastic time-lags in these features, we establish a statistically robust lower limit: M > 0.9 × 1016 GeV on the scale of violation of Lorentz invariance. {\textcopyright} 2006 Elsevier B.V. All rights reserved.},
  archiveprefix = {arXiv},
  arxivid       = {astro-ph/0510172},
  doi           = {10.1016/j.astropartphys.2006.04.001},
  eprint        = {0510172},
  keywords      = {Gamma ray burst, Lorentz invariance, Quantum gravity, Wavelet transform},
  primaryclass  = {astro-ph},
  url           = {https://linkinghub.elsevier.com/retrieve/pii/S0927650506000508},
}

@Article{Ellis2008,
  author        = {Ellis, John and Mavromatos, N. E. and Nanopoulos, D. V.},
  journal       = {Physics Letters B},
  title         = {{Derivation of a vacuum refractive index in a stringy space–time foam model}},
  year          = {2008},
  issn          = {03702693},
  month         = {jul},
  number        = {5},
  pages         = {412--417},
  volume        = {665},
  abstract      = {It has been suggested that energetic photons propagating in vacuo should experience a non-trivial refractive index due to the foamy structure of space-time induced by quantum-gravitational fluctuations. The sensitivity of recent astrophysical observations, particularly of AGN Mk501 by the MAGIC Collaboration, approaches the Planck scale for a refractive index depending linearly on the photon energy. We present here a new derivation of this quantum-gravitational vacuum refraction index, based on a stringy analogue of the interaction of a photon with internal degrees of freedom in a conventional medium. We model the space-time foam as a gas of D-particles in the bulk space-time of a higher-dimensional cosmology where the observable Universe is a D3-brane. The interaction of an open string representing a photon with a D-particle stretches and excites the string, which subsequently decays and re-emits the photon with a time delay that increases linearly with the photon energy and is related to stringy uncertainty principles. We relate this derivation to other descriptions of the quantum-gravitational refractive index in vacuo. {\textcopyright} 2008 Elsevier B.V. All rights reserved.},
  archiveprefix = {arXiv},
  arxivid       = {0804.3566},
  doi           = {10.1016/j.physletb.2008.06.029},
  eprint        = {0804.3566},
  url           = {https://linkinghub.elsevier.com/retrieve/pii/S037026930800748X},
}

@Article{Liberati2009,
  author        = {Liberati, Stefano and Maccione, Luca},
  journal       = {Annual Review of Nuclear and Particle Science},
  title         = {{Lorentz violation: Motivation and new constraints}},
  year          = {2009},
  issn          = {0163-8998},
  month         = {nov},
  number        = {1},
  pages         = {245--267},
  volume        = {59},
  abstract      = {We review the main theoretical motivations and observational constraints on Planck scale-suppressed violations of Lorentz invariance. After introducing the problems related to the phenomenological study of quantum gravitational effects, we discuss the main theoretical frameworks within which possible departures from Lorentz invariance can be described. In particular, we focus on the framework of effective field theory, describing several possible ways of including Lorentz violation therein and discussing their theoretical viability. We review the main low-energy effects that are expected in this framework. We discuss the current observational constraints on such a framework, focusing on those achievable through high-energy astrophysics observations. In this context, we present a summary of the most recent and strongest constraints on quantum electrodynamics with Lorentz-violating nonrenormalizable operators. Finally, we discuss the status of the field and its future perspectives. Copyright {\textcopyright} 2009 by Annual Reviews. All rights reserved.},
  archiveprefix = {arXiv},
  arxivid       = {0906.0681},
  doi           = {10.1146/annurev.nucl.010909.083640},
  eprint        = {0906.0681},
  keywords      = {Cosmic rays, Crab nebula, High-energy astrophysics, Planck scale, Quantum gravity phenomenology, Special relativity},
  url           = {http://www.annualreviews.org/doi/10.1146/annurev.nucl.010909.083640},
}

@Article{AMELINO-CAMELIA2002a,
  author        = {Amelino-Camelia, Giovanni},
  journal       = {International Journal of Modern Physics D},
  title         = {{Relativity in spacetimes with short-distance structure governed by an observer-independent (Planckian) length scale}},
