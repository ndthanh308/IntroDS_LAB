  journal       = {Physical Review D},
  title         = {{Constraints on Lorentz invariance violation from gamma-ray burst GRB090510}},
  year          = {2009},
  issn          = {1550-7998},
  month         = {dec},
  number        = {11},
  pages         = {116005},
  volume        = {80},
  abstract      = {We obtain modified dispersion relations by requiring the vanishing of determinant of inverse of modified photon propagators in Lorentz invariance violation (LIV) theory. Inspired by these dispersion relations, we give a more general dispersion relation with less assumptions and apply it to the recent observed gamma-ray burst GRB090510 to extract various constraints on LIV parameters. We find that the constraint on quantum gravity mass is slightly larger than the Planck mass but is consistent with other recent observations, so the corresponding LIV coefficient $\xi$1 has reached the natural order [O(1)] as one expects. From our analysis, the linear LIV corrections to photon group velocity might be not excluded yet. {\textcopyright} 2009 The American Physical Society.},
  archiveprefix = {arXiv},
  arxivid       = {0909.4927},
  doi           = {10.1103/PhysRevD.80.116005},
  eprint        = {0909.4927},
  url           = {https://link.aps.org/doi/10.1103/PhysRevD.80.116005},
}

@Article{Xiao2009a,
  author        = {Xiao, Zhi and Ma, Bo-Qiang},
  journal       = {International Journal of Modern Physics A},
  title         = {{Lorentz violation dispersion relation and its application}},
