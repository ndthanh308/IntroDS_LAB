@Article{Xu2018,
  author        = {Xu, Haowei and Ma, Bo-Qiang},
  journal       = {Journal of Cosmology and Astroparticle Physics},
  title         = {{Regularity of high energy photon events from gamma ray bursts}},
  year          = {2018},
  issn          = {1475-7516},
  month         = {jan},
  number        = {01},
  pages         = {050--050},
  volume        = {2018},
  abstract      = {The effect of Quantum Gravity (QG) may bring a tiny light speed variation as v(E)=c(1-E/ELV), where E is the photon energy and ELV is a Lorentz violation scale. A remarkable regularity was suggested in previous studies to look for the light speed variation from high energy photon events of Gamma Ray Bursts (GRBs). We provide a general analysis on the data of 25 bright GRBs observed by the Fermi Gamma-ray Space Telescope (FGST). Such method allows a completed scan over all possibilities in a more clean and impartial way without any bias compared to previous intuitive analysis. The results show that with the increase in the intrinsic energies of photons, such regularity truly emerges and gradually becomes significant. For photons with intrinsic energies higher than 40 GeV, the regularity exists at a significance of 3-5 $\sigma$ with ELV=3.6× 1017 GeV determined by the GRB data.},
  archiveprefix = {arXiv},
  arxivid       = {1801.08084},
  doi           = {10.1088/1475-7516/2018/01/050},
  eprint        = {1801.08084},
  keywords      = {gamma ray bursts theory, quantum gravity phenomenology},
  url           = {https://iopscience.iop.org/article/10.1088/1475-7516/2018/01/050},
}

@Article{Xu2016,
  author        = {Xu, Haowei and Ma, Bo-Qiang},
  journal       = {Physics Letters B},
  title         = {{Light speed variation from gamma ray burst GRB 160509A}},
