@article{hedegaard_energy_2013,
	title = {Energy system investment model incorporating heat pumps with thermal storage in buildings and buffer tanks},
	volume = {63},
	issn = {03605442},
	url = {https://linkinghub.elsevier.com/retrieve/pii/S036054421300827X},
