@article{obrzudMicrophotonicAstrocomb2019a,
  title = {A Microphotonic Astrocomb},
  author = {Obrzud, Ewelina and Rainer, Monica and Harutyunyan, Avet and Anderson, Miles H. and Liu, Junqiu and Geiselmann, Michael and Chazelas, Bruno and Kundermann, Stefan and Lecomte, Steve and Cecconi, Massimo and Ghedina, Adriano and Molinari, Emilio and Pepe, Francesco and Wildi, Fran{\c c}ois and Bouchy, Fran{\c c}ois and Kippenberg, Tobias J. and Herr, Tobias},
