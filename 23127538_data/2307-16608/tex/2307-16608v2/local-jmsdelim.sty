\RequirePackage{jmsdelim}

\NewDocumentCommand\Sub{m}{%
  _{\DelimProtect{#1}}%
}

\NewDocumentCommand\Sup{m}{%
  ^{\DelimProtect{#1}}%
}

\let\prn\DelimPrn
\let\brk\DelimBrk
\let\brc\DelimBrc
\let\bbrk\DelimBbrk
\let\gl\DelimGl

\NewDocumentCommand\vrt{m}{\DelimSurround{\lvert}{\rvert}{#1}}
\NewDocumentCommand\vvrt{m}{\DelimSurround{\lVert}{\rVert}{#1}}
\NewDocumentCommand\pprn{m}{\DelimSurround{\llparenthesis}{\rrparenthesis}{#1}}
\NewDocumentCommand\floors{m}{\DelimSurround{\lfloor}{\rfloor}{#1}}
\NewDocumentCommand\ceils{m}{\DelimSurround{\lceil}{\rceil}{#1}}
\NewDocumentCommand\ggl{m}{\DelimSurround{\llangle}{\rrangle}{#1}}


\NewDocumentCommand\Compr{mm}{
  \DelimBetweenSurround{\lbrace}{\vert}{\rbrace}{#1}{#2}
}

\NewDocumentCommand\Split{mm}{
  \DelimBetweenSurround{[}{\vert}{]}{#1}{#2}
}
