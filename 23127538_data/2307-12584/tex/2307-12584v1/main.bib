@article{chauhan_physical_2020,
	title = {The physical drivers of the atomic hydrogen-halo mass relation},
	url = {http://arxiv.org/abs/2006.12102},
	abstract = {We use SHARK, a semi-analytic galaxy formation model, to investigate the physical processes involved in dictating the shape, scatter and evolution of the HI-halo mass relation at \$0{\textbackslash}leq z {\textbackslash}leq 2\$. We compare SHARK with HI clustering and spectral stacking of the HI-halo mass relation derived from observations finding excellent agreement with the former and a deficiency of HI in SHARK at \$M\_\{{\textbackslash}rm vir\}{\textbackslash}approx 10{\textasciicircum}\{12-13\} M\_\{{\textbackslash}odot\}\$ in the latter, but otherwise great agreement below and above that mass threshold. In SHARK, we find that the HI mass increases with the halo mass up to a critical mass of \${\textbackslash}approx 10{\textasciicircum}\{11.8\} M\_\{{\textbackslash}odot\}\$; between \${\textbackslash}sim 10{\textasciicircum}\{11.8\}-10{\textasciicircum}\{13\}M\_\{{\textbackslash}odot\}\$, the scatter in the relation increases by 0.7 dex and the HI mass decreases with the halo mass on average; at \$M\_\{{\textbackslash}rm vir\} {\textbackslash}geq 10{\textasciicircum}\{13\} M\_\{{\textbackslash}odot\}\$, the HI content continues to increase with halo mass. We find that the critical halo mass of \${\textbackslash}approx 10{\textasciicircum}\{12\} M\_\{{\textbackslash}odot\}\$ is largely set by feedback from Active Galactic Nuclei (AGN), and the exact shape and scatter of the HI-halo mass relation around that mass is extremely sensitive to how AGN feedback is modelled, with other physical processes playing a less significant role. We determine the main secondary parameters responsible for the scatter of the HI-halo mass relation, namely the halo spin parameter at \$M\_\{{\textbackslash}rm vir\}{\textbackslash}leq 10{\textasciicircum}\{11.8\} M\_\{{\textbackslash}odot\}\$, and the fractional contribution from substructure to the total halo mass for \$M\_\{{\textbackslash}rm vir\}{\textbackslash}geq 10{\textasciicircum}\{13\} M\_\{{\textbackslash}odot\}\$. The scatter at \$10{\textasciicircum}\{11.8\}{\textless}M\_\{{\textbackslash}rm vir\}{\textless}10{\textasciicircum}\{13\} M\_\{{\textbackslash}odot\}\$ is best described by the black-hole-to-stellar mass ratio of the central galaxy, reflecting the AGN feedback relevance. We present a numerical model to populate dark matter-only simulations with HI at \$0{\textbackslash}leq z {\textbackslash}leq 2\$ based solely on halo parameters that are measurable in such simulations.},
