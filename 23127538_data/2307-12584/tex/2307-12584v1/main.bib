	note = {arXiv: 1807.11180},
	keywords = {Astrophysics - Astrophysics of Galaxies, shark},
	pages = {3573--3603},
	file = {arXiv Fulltext PDF:/Users/katyproctor/Zotero/storage/KPQIDQFA/Lagos et al. - 2018 - Shark introducing an open source, free and flexib.pdf:application/pdf;arXiv.org Snapshot:/Users/katyproctor/Zotero/storage/R7STVPYS/1807.html:text/html},
