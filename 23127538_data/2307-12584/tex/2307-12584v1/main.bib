	author = {Somerville, Rachel S. and Davé, Romeel},
	month = aug,
	year = {2015},
	note = {arXiv: 1412.2712},
	keywords = {Astrophysics - Astrophysics of Galaxies},
	pages = {51--113},
	file = {arXiv Fulltext PDF:/Users/katyproctor/Zotero/storage/5ZYKT6QA/Somerville and Davé - 2015 - Physical Models of Galaxy Formation in a Cosmologi.pdf:application/pdf;arXiv.org Snapshot:/Users/katyproctor/Zotero/storage/96FRTVT7/1412.html:text/html},
