	note = {arXiv:2207.08776 [astro-ph]},
	keywords = {Astrophysics - Astrophysics of Galaxies},
	pages = {stac2033},
	file = {arXiv Fulltext PDF:/Users/katyproctor/Zotero/storage/DY4IIX7H/Ortega-Martinez et al. - 2022 - Milky Way-like galaxies stellar population proper.pdf:application/pdf;arXiv.org Snapshot:/Users/katyproctor/Zotero/storage/M7XPJDFP/2207.html:text/html},
}

@misc{genina_edge_2022,
	title = {On the {Edge}: the relation between stellar and dark matter haloes of {Milky} {Way}-mass galaxies},
	shorttitle = {On the {Edge}},
